#!/bin/bash

username="$1"

if [ -z "$username" ]; then
  echo "Trebuie sa specificati un nume de utilizator pentru delogare!"
  exit 1
fi

nouaLista=()
gasit=0

for user in "${loggedInUsers[@]}"; do
  if [ "$user" != "$username" ]; then
    nouaLista+=("$user")
  else
    gasit=1
  fi
done

if [ $gasit -eq 1 ]; then
  loggedInUsers=("${nouaLista[@]}")
  echo "Utilizatorul '$username' a fost delogat cu succes."
else
  echo "Utilizatorul '$username' nu este autentificat."
fi
